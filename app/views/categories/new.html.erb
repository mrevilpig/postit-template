<h1>New Category</h1>
<hr/>

<% if @category.errors.any? %>
	<div class='row'>
		<div class = 'alert alert-error span8'>
			<p><b>There are some errors</b></p>
			<ul>
				<% @category.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>

<%= form_for @category do |f|%>
	<div class='well'>
		<div class="control-group">
			<%= f.label :name %>
			<%= f.text_field :name%>
		</div>
		<%= f.submit "New Category", class: 'btn btn-primary'%>
	</div>
<% end %>