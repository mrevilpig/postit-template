<% if @post.errors.any? %>
	<div class='row'>
		<div class = 'alert alert-error span8'>
			<p><b>There are some errors</b></p>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>

<div class = 'well'>
	<%= form_for @post do |f|%>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<br/>
		<%= f.label :url %>
		<%= f.text_field :url %>
		<br/>
		<%= f.label :description %>
		<%= f.text_area :description, rows: 5 %>
		<br/>
		<%= f.submit(@post.new_record? ? "Create" : "Update", class: "btn btn-primary") %>
	<% end %>
</div>